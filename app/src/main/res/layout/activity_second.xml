<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unica.labexer_unica.SecondActivity"
    android:background="#FFEB3B">

    <Button
        android:id="@+id/btn_loadShared"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:onClick="loadSharedPref"
        android:background="#CDDC39"
        android:text="Load Shared Preferences" />

    <Button
        android:id="@+id/btn_loadInternal"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_loadShared"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:onClick="loadInternal"
        android:background="#CDDC39"
        android:text="Load Internal Storage" />

    <Button
        android:id="@+id/btn_Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_loadInternal"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="32dp"
        android:onClick="clearDisplay"
        android:background="#CDDC39"
        android:text="Clear" />

    <Button
        android:id="@+id/btn_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_Clear"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:onClick="backActivity"
        android:background="#CDDC39"
        android:text="Back" />

    <TextView
        android:id="@+id/tvdisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:textSize="20sp"
        android:layout_alignStart="@+id/btn_Clear"
        android:layout_alignLeft="@+id/btn_Clear"
        android:layout_below="@+id/btn_Clear"
         />
</RelativeLayout>
